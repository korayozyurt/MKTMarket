@model MKTMarket.Nortwind.MvcWebUI.Models.ProductListViewModel


@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["Title"] = "Ürünler";
}

<h2>Hello MKT MARKET - Product</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Units In Stock</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model.Products)
            {
                <tr>
                    <td scope="row">@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td><a class="btn btn-cs btn-sucess" asp-controller="Cart" asp-action="AddtoCart" asp-route-productId="@product.ProductId">Add to cart</a></td>
                </tr>
            }

        </tbody>

    </table>
</div>
<product-list-pager 
    current-category="@Model.CurrentCategory"
    current-page="@Model.currentPage"
    page-count="@Model.PageCount"
    page-size="@Model.PageSize">
</product-list-pager>