@model MKTMarket.Nortwind.MvcWebUI.Models.CartSummaryViewModel

    <div class="dropdown-menu">
        @foreach (var item in Model.Cart.CartLines)
        {
            <a href="#" class="dropdown-item">@item.Product.ProductName <span class="badge badge-light">@item.Quantity</span></a>
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#"><span class="glyphicon glyphicon-align-left glypicon-shopping-cart" aria-hidden="true">@Model.Cart.Total</span></a>
        <div class="dropdown-divider"></div>
        <a asp-controller="Cart" asp-action="List">Go To Cart Details</a>
    </div>